@model AirlineTicketsReservation.Models.ViewModels.EditRezervimiRequest
@{
}

<div class="bg-opacity-10 py-2 text-center">
     <h1>Edit Rezervimi</h1>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Emri Pasagjerit</label>
                <input type="text" class="form-control" id="emriPasagjerit" asp-for="EmriPasagjerit" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Mbiemri Pasagjerit</label>
                <input type="text" class="form-control" id="mbiemriPasagjerit" asp-for="MbiemriPasagjerit" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" class="form-control" id="email" asp-for="Email" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Class</label>
                <select class="form-control" asp-for="Klasi">
                    <option value="Economic">Economic</option>
                    <option value="VIP">VIP</option>
                    <option value="Business">Business</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Cmimi</label>
                <input type="text" class="form-control" id="cmimi" asp-for="Cmimi" />
            </div>

            <div class="mb-3">
                <label class="form-label">Currency</label>
                @foreach (var currency in new List<string> { "EUR", "USD" })
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@currency" id="@($"{currency}Checkbox")" name="SelectedCurrencies" checked="@(Model.SelectedCurrencies.Contains(currency))" />
                        <label class="form-check-label" for="@($"{currency}Checkbox")">
                            @currency
                        </label>
                    </div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Flight</label>
                @Html.DropDownListFor(model => model.FluturimiId, Model.Fluturimi, "Select Flight", new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label">Return</label>
                <input class="form-check-input" type="checkbox" id="kthyeseCheckbox" asp-for="Kthyese" />
                <label class="form-check-label" for="kthyeseCheckbox">
                    Return
                </label>
            </div>

            <div class="mb-3">
                <label class="form-label">Reservation Date</label>
                <input type="datetime-local" class="form-control" id="dataERezervimit" asp-for="Data_e_Rezervimit" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Return Date</label>
                <input type="datetime-local" class="form-control" id="dataEKthimit" asp-for="Data_e_Kthimit" />
            </div>

            <div class="mb-3 d-flex">
                <button type="submit" class="btn btn-dark">Update</button>

                <button type="submit"
                        class="btn btn-danger ms-2"
                        asp-area=""
                        asp-controller="Rezervimi"
                        asp-action="Delete">
                    Delete
                </button>
            </div>

        </form>
    }
    else
    {
        <p>No reservation found!</p>
    }
</div>