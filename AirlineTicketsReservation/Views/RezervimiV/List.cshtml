@model PaginatedList<AirlineTicketsReservation.Models.RezervimiV>
@{
}

<div class=" bg-opacity-10 py-2 text-center">
    <h1>Të dhënat për Rezervime</h1>
</div>

<div class="container  py-5">
    <div class="row">
        <div class="col-md-6 mb-5">
            <a asp-area="" asp-controller="RezervimiV" asp-action="Add" class="btn btn-primary">
                Add
            </a>
        </div>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                    <tr class="bg-secondary">
                    <th>
                        Id
                    </th>
                    <th>Email</th>
                    <th>DataFillimit</th>
                    <th>DataKthimit</th>
                    <th>Cmimi</th>
                    <th>AeroportiID</th>
                    <th>VeturaID</th>
                    <th>Edit</th>
                    <th>Delete</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rezervimi in Model)
                {
                    <tr>

                        <td>@rezervimi.RezervimiID</td>
                        <td>@rezervimi.Email</td>

                        <td>@rezervimi.DataFillimit</td>
                        <td>@rezervimi.DataKthimit</td>
                        <td>@rezervimi.Cmimi</td>

                        <td>@rezervimi.AeroportiID</td>
                        <td>@rezervimi.VeturaID</td>

                        <td>
                            <a asp-area="" asp-controller="RezervimiV"
                               asp-action="Edit" asp-route-id="@rezervimi.RezervimiID" class="btn btn-warning">
                                Edit
                            </a>
                        </td>

                        <td>
                            <form asp-controller="RezervimiV" asp-action="Delete" method="post">
                                <input type="hidden" name="Id" value="@rezervimi.RezervimiID" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <div class="text-center">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="List" asp-route-page="1" class="btn btn-outline-secondary">First</a>
                <a asp-action="List" asp-route-page="@Model.PageIndex - 1" class="btn btn-outline-secondary">Previous</a>
            }

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <a asp-action="List" asp-route-page="@i" class="btn btn-outline-secondary @(i == Model.PageIndex ? "active" : "")">@i</a>
            }

            @if (Model.HasNextPage)
            {
                <a asp-action="List" asp-route-page="@Model.PageIndex + 1" class="btn btn-outline-secondary">Next</a>
                <a asp-action="List" asp-route-page="@Model.TotalPages" class="btn btn-outline-secondary">Last</a>
            }
        </div>

        }
        else
        {
            <div class="alert alert-info" role="alert">
                <p>No Reservation Found!</p>
            </div>
        }
    </div>
