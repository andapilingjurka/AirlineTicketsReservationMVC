@model PaginatedList<AirlineTicketsReservation.Models.Vetura>
@{
}


<div class=" bg-opacity-10 py-2 text-center">
    <h1>Të dhënat për Vetura</h1>
</div>

<div class="container  py-5">
    <div class="row">
        <div class="col-md-6 mb-5">
            <a asp-area="" asp-controller="Vetura" asp-action="Add" class="btn btn-primary">
                Add
            </a>
        </div>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr class="bg-secondary">
                    <th>Id</th>
                    <th>Modeli</th>
                    <th>Viti Prodhimit</th>
                    <th>Karburanti</th>
                    <th>Cmimi</th>
                    <th>Pershkrimi i Modelit</th>
                    <th>Foto</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vetura in Model)
                {
                    <tr>
                        <td>@vetura.VeturaID</td>
                        <td>@vetura.Modeli</td>
                        <td>@vetura.VitiProdhimit</td>
                        <td>@vetura.Karburanti</td>
                        <td>@vetura.Cmimi€</td>
                        <td>@vetura.PershkrimiModelit</td>
                        <td><img src="~/images/Vetura/@Url.Content(vetura.PhotoUrl)" style="max-width: 200px; max-height: 200px;"></td>
                        <td>
                            <a asp-area="" asp-controller="Vetura"
                               asp-action="Edit" asp-route-id="@vetura.VeturaID" class="btn btn-warning">
                                Edit
                            </a>
                        </td>

                        <td>
                            <form asp-controller="Vetura" asp-action="Delete" method="post">
                                <input type="hidden" name="Id" value="@vetura.VeturaID" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <div class="text-center">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="List" asp-route-page="1" class="btn btn-outline-secondary">First</a>
                <a asp-action="List" asp-route-page="@Model.PageIndex - 1" class="btn btn-outline-secondary">Previous</a>
            }

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <a asp-action="List" asp-route-page="@i" class="btn btn-outline-secondary @(i == Model.PageIndex ? "active" : "")">@i</a>
            }

            @if (Model.HasNextPage)
            {
                <a asp-action="List" asp-route-page="@Model.PageIndex + 1" class="btn btn-outline-secondary">Next</a>
                <a asp-action="List" asp-route-page="@Model.TotalPages" class="btn btn-outline-secondary">Last</a>
            }
        </div>

        }
        else
        {
            <div class="alert alert-info" role="alert">
                <p>No Cars Found!</p>
            </div>
        }
    </div>
   



