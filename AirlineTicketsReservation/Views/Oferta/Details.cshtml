@model AirlineTicketsReservation.Models.Oferta

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 text-center border rounded p-4" style="border: 2px solid #007BFF; border-radius: 10px;">
            <h2>@Model.Hoteli.Emri - Flight Number: @Model.FluturimiId</h2>
            <p>Description: @Model.Description</p>
            <p>Price: $@Model.Cmimi</p>

            <a href="@Url.Action("Add", "RezervimOferta", new { ofertaId = Model.Id })" class="btn btn-success">Rezervo</a>

            <a href="@Url.Action("Index", "Oferta")" class="btn btn-primary">Go Back</a>
        </div>
    </div>
</div>
