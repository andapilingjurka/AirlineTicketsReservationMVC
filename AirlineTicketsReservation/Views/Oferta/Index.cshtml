@model List<Oferta>

<style>
    .jumbotron {
        margin: 0;
        background: url('@Url.Content("~/images/Picture1.jpg")') no-repeat center center fixed;
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        padding: 100px;
        height: 100vh;
        padding-top: 250px
    }

    .card-title {
        font-size: 1.5rem;
    }

    .card-text {
        font-size: 1rem;
    }

    .ofertat{
        margin-bottom:100px;
        margin-top:100px;
    }
</style>
<div class="jumbotron">

    <h1 class="display-4">Zbuloni Ofertat Tona</h1>
    <p class="lead">Zbuloni oferta të mahnitshme për udhëtimin tuaj të ardhshëm.</p>
</div>

<div class="container mt-4 ofertat">
    <div class="row">
        @foreach (var oferta in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">

                    <div class="card-body text-center">
                        <h5 class="card-title">@oferta.Hoteli.Emri </h5>

                        <p class="card-text">From: @oferta.Fluturimi.DeparuteAirport</p>
                        <p class="card-text">To: @oferta.Fluturimi.ArrivalAirport</p>
                        <p class="card-text">Price: $@oferta.Cmimi</p>
                        <!-- Add other fields as needed -->
                        <a href="@Url.Action("Details", new { id = oferta.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
