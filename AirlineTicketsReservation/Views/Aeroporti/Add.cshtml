@model AirlineTicketsReservation.Models.ViewModels.AddAeroportiRequest
@{
}

<div class="bg-opacity-10 py-2 text-center">
    <h1>Shto Aeroport</h1>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Emri</label>
            <input type="text" class="form-control" id="emri" asp-for="Emri" required />
            <span class="text-danger" asp-validation-for="Emri"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Qyteti</label>
            <input type="text" class="form-control" id="qyeti" asp-for="QytetiID" required />
            <span class="text-danger" asp-validation-for="QytetiID"></span>
        </div>


       

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>