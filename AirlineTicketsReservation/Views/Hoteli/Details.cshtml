<style>
    .hoteli {
        padding: 5%;
        text-align: left;
    }

    .card-hotel {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 20px;
        background-color: #fff;
        border: none;
        border-radius: 8px;
        margin-bottom: 100px;
        margin-top: 0;
    }

    .img-hoteli {
        max-width: 100%;
        height: 500px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .hoteli-p {
        font-size: 16px;
        line-height: 1.6;
        margin: 10px 0;
    }

</style>

<div class="container py-5 hoteli">
    @if (Model != null)
    {
        <h1 class="display-5">Detajet rreth hotelit</h1>

        <div class="card card-hotel">
            <img class="img-hoteli" src="~/images/Hoteli/@Url.Content(Model.Image)" alt="Hoteli Image">
            <p class="hoteli-p"><b>Emri Hotelit:</b> <br />@Model.Emri</p>
            <p class="hoteli-p"><b>Adresa:</b> <br />@Model.Adresa</p>
            <p class="hoteli-p"><b>Pershkrimi:</b> <br />@Model.Pershkrimi</p>

            <div>
                <a href="@Url.Action("Index", "Hoteli")" class="btn btn-dark">Go Back</a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <p>No Hotel Found!</p>
        </div>
    }
</div>