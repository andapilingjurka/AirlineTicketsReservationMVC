@model AirlineTicketsReservation.Models.ViewModels.EditShtetiRequest
@{
}

<div class="bg-opacity-10 py-2 text-center">
    <h1>Edit Shteti</h1>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            <span class="text-danger" asp-validation-for="Id"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Emri</label>
            <input type="text" class="form-control" id="emri" asp-for="Emri" required />
            <span class="text-danger" asp-validation-for="Emri"></span>
        </div>


        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Update</button>
            </div>
        </div>

    </form>
</div>
